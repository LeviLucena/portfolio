---
import BlogLayout from '../../layouts/BlogLayout.astro';
import { allPosts } from '../../lib/posts';

export async function getStaticPaths() {
  return allPosts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;

const author = {
  name: 'Levi Lucena',
  role: 'Engenheiro de Software & Especialista em IA'
};

const socialLinks = [
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/levilucena/', icon: 'fab fa-linkedin' },
  { name: 'GitHub', url: 'https://github.com/LeviLucena', icon: 'fab fa-github' },
  { name: 'Portfolio', url: 'https://levilucena.github.io/portfolio/', icon: 'fas fa-external-link-alt' },
  { name: 'Kaggle', url: 'https://www.kaggle.com/levilucena', icon: 'fab fa-kaggle' },
  { name: 'Credly', url: 'https://www.credly.com/users/levi-gustavo-oliveira-lucena', icon: 'fas fa-award' }
];
---

<BlogLayout title={`${post.title} - Levi Lucena`}>
  <div class="blog-container">
    <header class="blog-header">
      <div class="container">
        <nav class="blog-nav">
          <a href="/" class="nav-logo">LL</a>
          <ul class="nav-menu">
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href="/archive" class="nav-link">Archive</a></li>
            <li><a href="/about" class="nav-link">About</a></li>
            <li><a href="/projects" class="nav-link">Projects</a></li>
          </ul>
          <button class="theme-toggle">
            <i class="fas fa-moon"></i>
          </button>
        </nav>
      </div>
    </header>

    <main class="post-page">
      <div class="container">
        <article class="post-content">
          <header class="post-header">
            <h1>{post.title}</h1>
            <div class="post-meta">
              <time datetime={post.date}>{new Date(post.date).toLocaleDateString('pt-BR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
              <div class="post-tags">
                {post.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </header>
          
          <div class="post-body" set:html={post.content}></div>
          
          <footer class="post-footer">
            <div class="author-info">
              <h3>{author.name}</h3>
              <p>{author.role}</p>
            </div>
          </footer>
        </article>
      </div>
    </main>

    <footer class="blog-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-about">
            <h3>Levi Lucena</h3>
            <p>Profissional multidisciplinar com sólida experiência em engenharia de software, inteligência artificial e automação de processos.</p>
            <div class="social-links">
              <a href="https://www.linkedin.com/in/levilucena/" target="_blank" aria-label="LinkedIn">
                <i class="fab fa-linkedin"></i>
              </a>
              <a href="https://github.com/LeviLucena" target="_blank" aria-label="GitHub">
                <i class="fab fa-github"></i>
              </a>
              <a href="https://levilucena.github.io/portfolio/" target="_blank" aria-label="Portfolio">
                <i class="fas fa-external-link-alt"></i>
              </a>
              <a href="https://www.kaggle.com/levilucena" target="_blank" aria-label="Kaggle">
                <i class="fab fa-kaggle"></i>
              </a>
              <a href="https://www.credly.com/users/levi-gustavo-oliveira-lucena" target="_blank" aria-label="Credly">
                <i class="fas fa-award"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} Levi Lucena. Todos os direitos reservados.</p>
        </div>
      </div>
    </footer>
  </div>
</BlogLayout>