---

<BrutalistLayout title="Levi Lucena - Projects">
  <!-- HERO SECTION -->
  <section class="projects-hero">
    <div class="container">
      <h1>Selected<br /><span class="text-accent">Work</span></h1>
      <p class="hero-subtitle">Projetos que transformam ideias em soluções digitais</p>
    </div>
  </section>

  <!-- PROJECTS GRID -->
  <section class="container">
    <div class="projects-grid">
      {featuredProjects.map(project => (
        <article class="project-card hover-trigger">
          <div class="project-number">{project.number}</div>
          <div class="project-category">{project.category}</div>
          <div class="project-content">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <div class="project-tech">
              {project.technologies.slice(0, 4).map(tech => (
                <span>{tech}</span>
              ))}
            </div>
            <a href={project.url} target="_blank" class="project-link">
              Ver Projeto
              <i class="fas fa-external-link-alt"></i>
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- MORE PROJECTS CTA -->
  <section class="more-projects">
    <div class="container">
      <div class="cta-box">
        <h2>Quer ver mais?</h2>
        <p>Explore todos os meus projetos no GitHub</p>
        <a href="https://github.com/LeviLucena" target="_blank" class="cta-link hover-trigger">
          GitHub Profile
          <i class="fab fa-github"></i>
        </a>
      </div>
    </div>
  </section>

  <style is:global>
    /* PROJECTS HERO */
    .projects-hero {
      min-height: 60vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      border-bottom: 1px solid var(--border-color);
    }

    .projects-hero h1 {
      font-family: var(--font-heading);
      font-size: clamp(4rem, 12vw, 10rem);
      line-height: 0.9;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    .projects-hero h1 span {
      color: var(--accent-color);
    }

    .hero-subtitle {
      font-size: 1.5rem;
      opacity: 0.7;
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }

    /* PROJECTS GRID */
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2px;
      border-top: 1px solid var(--border-color);
      border-left: 1px solid var(--border-color);
    }

    .project-card {
      position: relative;
      border-right: 1px solid var(--border-color);
      border-bottom: 1px solid var(--border-color);
      padding: 3rem 2rem;
      min-height: 400px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      transition: all 0.4s ease;
      background: transparent;
    }

    .project-card:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      transform: translateY(-5px);
      box-shadow: 8px 8px 0px var(--accent-color);
    }

    .project-number {
      font-family: var(--font-heading);
      font-size: 5rem;
      line-height: 1;
      opacity: 0.3;
      position: absolute;
      top: 1rem;
      right: 1rem;
      transition: all 0.3s;
    }

    .project-card:hover .project-number {
      opacity: 1;
      color: var(--accent-color);
      transform: scale(1.1);
    }

    .project-category {
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--accent-color);
      margin-bottom: 2rem;
    }

    .project-card:hover .project-category {
      color: var(--bg-color);
    }

    .project-content h3 {
      font-family: var(--font-heading);
      font-size: 2.5rem;
      line-height: 1;
      margin-bottom: 1rem;
      text-transform: uppercase;
    }

    .project-content p {
      font-size: 1rem;
      line-height: 1.6;
      opacity: 0.8;
      margin-bottom: 1.5rem;
    }

    .project-tech {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-bottom: 1.5rem;
    }

    .project-tech span {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      padding: 0.25rem 0.75rem;
      border: 1px solid var(--accent-color);
      color: var(--accent-color);
    }

    .project-card:hover .project-tech span {
      color: var(--bg-color);
      border-color: var(--bg-color);
    }

    .project-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 1rem;
      font-weight: 700;
      text-transform: uppercase;
      color: inherit;
      transition: all 0.3s;
    }

    .project-link:hover {
      color: var(--accent-color);
    }

    .project-card:hover .project-link:hover {
      color: var(--bg-color);
    }

    /* MORE PROJECTS SECTION */
    .more-projects {
      padding: 4rem 2rem;
      border-top: 1px solid var(--border-color);
    }

    .cta-box {
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
      padding: 4rem 2rem;
      border: 3px solid var(--text-color);
    }

    .cta-box:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      transform: translateY(-5px);
      box-shadow: 10px 10px 0px var(--accent-color);
    }

    .cta-box h2 {
      font-family: var(--font-heading);
      font-size: 3rem;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    .cta-box p {
      font-size: 1.2rem;
      opacity: 0.8;
      margin-bottom: 2rem;
    }

    .cta-link {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 1.2rem;
      font-weight: 700;
      text-transform: uppercase;
      padding: 1rem 2rem;
      border: 2px solid var(--accent-color);
      color: var(--accent-color);
      transition: all 0.3s;
    }

    .cta-link:hover {
      background-color: var(--accent-color);
      color: var(--bg-color);
    }

    @media (max-width: 768px) {
      .projects-grid {
        grid-template-columns: 1fr;
      }

      .project-card {
        min-height: 300px;
      }

n      .projects-hero h1 {
        font-size: 18vw;
      }
    }
  </style>
</BrutalistLayout>
